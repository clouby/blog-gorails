<h1>
  My Blog
</h1>
<div class="flex flex-col gap-4">
  <% @blog_posts.each do |blog_post| %>
    <article class="px-4 py-2 <%= blog_post.draft? ? 'bg-gray-200 text-gray-400 rounded' : '' %>  <%= blog_post.scheduled? ? 'bg-blue-200 text-blue-400 rounded' : '' %>">
      <h2>
        <%= link_to blog_post.title, blog_post %>
      </h2>
      <p>
        <%= blog_post.content %>
      </p>
    </article>
  <% end %>
</div>
